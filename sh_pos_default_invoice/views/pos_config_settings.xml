<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="sh_pos_res_config_settings_logo" model="ir.ui.view">
        <field name="name">pos.config.settings.logo</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_journal_id']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="iface_invoicing">
                    <div class="content-group mt16">
                        <field name="sh_enable_default_invoice" attrs="{'invisible':[('module_account','=',False)]}" style="width: 10%;" />
                        <label for="sh_enable_default_invoice" class="o_light_label" attrs="{'invisible':[('module_account','=',False)]}" />
                        <div class="text-muted" id="invoice_journal" style="margin-left: 26px; margin-top: -6px;">
                            Generate Invoice Automatically
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
