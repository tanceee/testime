<odoo>

    <record id="dev_account_move_rate_inherit_form" model="ir.ui.view">
        <field name="name">dev.account.move.rate.inherit.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='journal_div']" position="after">
                <field name="is_same_currency" invisible="1"/>
                <label for="currency_rate" groups="base.group_multi_currency"
                       attrs="{'invisible':[('is_same_currency','=',True)]}"/>
                <div groups="base.group_multi_currency" attrs="{'invisible':[('is_same_currency','=',True)]}">
                    <field name="currency_rate" attrs="{'invisible':[('is_same_currency','=',True)]}"/>
<!--                    <button name="onchange_currency_rate" type="object">UPDATE</button>-->
                </div>
            </xpath>
        </field>
    </record>

    <record id="purchase_order_form" model="ir.ui.view">
        <field name="name">purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="currency_rate_inverse" attrs="{'invisible':[('is_same_currency','=',True)]}"/>
                <field name="currency_rate" invisible="1"/>
                <field name="is_same_currency" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>
