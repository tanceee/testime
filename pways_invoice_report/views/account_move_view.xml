<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="invoice_dev_dtr_inv_layout_inherited" model="ir.ui.view">
        <field name="name">invoice.dev.dtr.inv.layout.inherited</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other_info']" position="before">
                <page string="Transportuesi">
                    <group>
                        <field name="transportuesi"/>
                        <field name="license_plate_no"/>
                        <field name="delivery_time"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <template id="stock_account_report_invoice_inherit" inherit_id="stock_account.stock_account_report_invoice_document">
        <xpath expr="//table[@name='invoice_snln_table']//thead//tr" position="inside">
            <th class="text-right"><span>Expiry Date</span></th>
        </xpath>
        <xpath expr="//table[@class='table table-sm']//tbody//t//tr" position="inside">
            <td class="text-right"><t t-esc="snln_line['expiry_date']"/></td>
        </xpath>
    </template>

    <record id="account_journal_inherit" model="ir.ui.view">
        <field name="name">account.journal.inherit</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="display_bank"/>
            </xpath>
        </field>
    </record>
</odoo>
